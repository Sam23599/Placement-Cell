<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title  %></title>

    <script src="https://kit.fontawesome.com/1d176c0d0a.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/css/layout.css">


    <%- style %>
</head>

<body>

    <%- include('_header'); %>

    <% if (flash.success && flash.success.length > 0) { %>
        <h5>
            <%= flash.success %>
        </h5>
    <% } %>

    <%- body  %>
    
    <%-include('_footer'); %>

    <%- script %>


    <!-- Jquery needed -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="/js/layout.js"></script>

    <script>
        <% if (flash.success && flash.success.length >0 ) { %>
            new Noty ({
                theme: 'relax',
                type: 'success',
                layout: 'topRight',
                text: '<%- flash.success %>', 
                timeout :2000 ,
            }).show();     
        <% } %>
        
        <% if (flash.error && flash.error.length >0 ) { %>
            new Noty ({
                theme: 'relax',
                type: 'error',
                layout: 'topRight',
                text: '<%- flash.error %>', 
                timeout :2000 ,
            }).show();     
        <% } %>

        
    </script>

</body>

</html>