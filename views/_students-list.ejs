<!-- Student Interview Data -->
<div class="student student-interview-<%= interview._id %>" id="<%= interview._id %>">
	<!-- If there's no result & interview -->
	<% if(!candidate.result && !candidate.student){ %>

		<div class="form-group">
			<!-- Student Name -->
			<select class="form-select form-control" id="student-<%= candidate._id %>-select" name="name" required>
				<% for(let student of students){ %>
					<option value="<%= student._id %>">
						<%= student.name %>
					</option>
					<% } %>
			</select>
		</div>
		<div class="form-group">
			<!-- Student Result -->
			<select class="form-select form-control" id="result-<%= candidate._id %>-select" name="result" required>
				<option value="Pass">Pass</option>
				<option value="Fail">Fail</option>
				<option value="Not Attended">Not Attended</option>
				<option value="On Hold">On Hold</option>
			</select>
		</div>

		<!-- Add Student to the Interview List -->
		<button class="add-student-interview" data-id="<%= candidate._id %>">
			Add Student&ensp;<i class="fa-solid fa-circle-plus"></i>
		</button>
		<!-- Delete the Interview Slot -->
		<button class="delete-interview-slot" data-id="<%= candidate._id %>">
			Delete Interview Slot&ensp;<i class="fa-solid fa-trash"></i>
		</button>

		<!-- Update Student Data in the Interview List -->
		<button class="update-student-interview hide" data-id="<%= candidate._id %>">
			Update Student&ensp;<i class="fa-solid fa-arrow-rotate-left"></i>
		</button>

		<!-- Student Interview Data -->
		<div class="fixed hide">
			<p><strong>Name:&ensp;</strong><span></span></p>
			<p><strong>Result:&ensp;</strong><span></span></p>
		</div>
		<!-- Edit Student Data in the Interview Slot -->
		<button class="edit-student-interview hide" data-id="<%= candidate._id %>">
			Edit&ensp;<i class="fa-solid fa-pen-to-square"></i>
		</button>
		<!-- Delete Student from the Interview List -->
		<button class="delete-student-interview hide" data-id="<%= candidate._id %>">
			Delete&ensp;<i class="fa-solid fa-trash"></i>
		</button>
		

		
		<!-- If the Student's Interview has been scheduled -->
		<% }else{ %>
			<div class="form-group hide">
				<select class="form-select form-control" id="student-<%= candidate._id %>-select" name="name" required>
					<% for(let student of students){ %>
						<option value="<%= student._id %>">
							<%= student.name %>
						</option>
						<% } %>
				</select>
			</div>
			<div class="form-group hide">
				<select class="form-select form-control" id="result-<%= candidate._id %>-select" name="result" required>
					<option value="pass">Pass</option>
					<option value="fail">Fail</option>
					<option value="on hold">On Hold</option>
					<option value="not attended">Not Attended</option>
					<option value="to be decided">To Be Decided</option>
				</select>
			</div>
			<button class="add-student-interview hide" data-id="<%= candidate._id %>">
				Add Student&ensp;<i class="fa-solid fa-circle-plus"></i>
			</button>
			<button class="update-student-interview hide" data-id="<%= candidate._id %>">
				Update Student&ensp;<i class="fa-solid fa-arrow-rotate-left"></i>
			</button>
			<div class="fixed">
				<p>
					<strong>Name:&ensp;</strong><span>
						<%= candidate.student.name %>
					</span>
				</p>
				<p>
					<strong>Result:&ensp;</strong><span>
						<%= candidate.result.result %>
					</span>
				</p>
			</div>
			<button class="edit-student-interview" data-id="<%= candidate._id %>">
				Edit&ensp;<i class="fa-solid fa-pen-to-square"></i>
			</button>
			<button class="delete-student-interview" data-id="<%= candidate._id %>">
				Delete&ensp;<i class="fa-solid fa-trash"></i>
			</button>
			<% } %>
</div>

<script src="/js/students-list.js"></script>

