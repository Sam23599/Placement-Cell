<link rel="stylesheet" href="/css/newEntry.css" />

<!-- If User is logged in -->
<% if (locals.user) { %>
	<input type="hidden" id="employeeProfile" value="<%= locals %>" />
	<section class="home">
	</section>

	<!-- If the Logged In User matches with the Employee's Profile then show the update form -->
	<div class="displayContainer">
		<div id="addDetails">
			<% if(locals.user.id){ %>
				<!-- Update Profile Form -->
				<form action="/interview/add-new-interview" method="post" class="interview-form">
					<h2>CREATE NEW INTERVIEW</h2>

					<div class="form-container">
						<div class="info">
							<div class="form-group">
								<label for="name">Company</label>
								<input type="text" class="form-control" id="company" placeholder="Enter Company Name"
									name="company" minlength="1" required />
							</div>
							<div class="form-group">
								<label for="date">Date</label>
								<input type="date" class="form-control" id="date" name="date"
									placeholder="Enter Interview Date" required />
							</div>
						</div>
					</div>

					<button type="submit" class=" submit-btn">
						Add Interview&ensp;<i class="fa-solid fa-circle-plus"></i>
					</button>
				</form>
				<% } %>
		</div>
	</div>
	<% } %>

<script src="/js/home.js"></script>
